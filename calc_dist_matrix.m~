function dist_matr = calc_dist_matrix(imgs)

    n_imgs = size(imgs,4);
    dist_matr = zeros(n_imgs,n_imgs);
    
    for i = 1 : n_imgs
        disp(i);
        for j = 1 : n_imgs 
            diff = imgs(:,:,:,i) - imgs(:,:,:,j);
            dist_matr(i,j) = sqrt(sum(sum((diff(:,:,1).^2) + (diff(:,:,2).^2) + (diff(:,:,3).^2))));
            sqrt(sum(sum((mov(:,:,1,i)-mov(:,:,1,j)).^2 + (mov(:,:,2,i)-mov(:,:,2,j)).^2 + (mov(:,:,3,i)-mov(:,:,3,j)).^2)));
        end
    end
end